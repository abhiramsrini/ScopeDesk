<Window x:Class="ScopeDesk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ScopeDesk" Height="620" Width="980" Background="{DynamicResource SurfaceBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="Resources/images/logo.png"
                           Height="36"
                           Stretch="Uniform"
                           VerticalAlignment="Center" />
                    <TextBlock Text="ScopeDesk" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}" Margin="12,0,0,0" />
                </StackPanel>
                <TextBlock Grid.Column="1"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource PrimaryBrush}"
                           FontWeight="SemiBold"
                           Text="{Binding StatusMessage}"
                           TextTrimming="CharacterEllipsis"
                           Margin="10,0,0,0" />
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource CardBorder}" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <!-- Connection section -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Orientation="Vertical">
                            <TextBlock Text="Oscilloscope IP" Style="{StaticResource LabelText}" />
                            <Grid Margin="0,6,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="260" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource InputTextBox}"
                                         Margin="0,0,12,0"
                                         VerticalAlignment="Center" />

                                <Button Grid.Column="1"
                                        Content="Connect"
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding ConnectCommand}"
                                        IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBoolConverter}}" />

                                <Button Grid.Column="2"
                                        Content="Disconnect"
                                        Style="{StaticResource SecondaryButton}"
                                        Command="{Binding DisconnectCommand}"
                                        IsEnabled="{Binding IsConnected}" />
                            </Grid>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,12,0,0">
                                <TextBlock Text="Status:" Style="{StaticResource LabelText}" />
                                <Border Margin="6,0,0,0"
                                        Padding="10,4"
                                        CornerRadius="12"
                                        Background="#22264B"
                                        BorderBrush="#2F3158"
                                        BorderThickness="1">
                                    <TextBlock Text="{Binding ConnectionStatusText}"
                                               FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{DynamicResource TertiaryBrush}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                        <Setter Property="Foreground" Value="#7CFFA8" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,6,0,0">
                                <TextBlock Text="Serial Number:" Style="{StaticResource LabelText}" />
                                <TextBlock Text="{Binding SerialNumber}"
                                           Margin="8,0,0,0"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource ForegroundBrush}" />
                            </StackPanel>
                        </StackPanel>

                        <!-- SCPI section -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="16,0,0,0">
                            <TextBlock Text="SCPI Command" Style="{StaticResource LabelText}" />
                            <Grid Margin="0,6,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                         Text="{Binding ScpiCommand, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBox}"
                                         Margin="0,0,12,0"
                                         VerticalAlignment="Center" />
                                <Button Grid.Column="1"
                                        Content="Send SCPI"
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding SendScpiCommand}" />
                            </Grid>

                            <TextBlock Text="Response" Style="{StaticResource LabelText}" Margin="0,10,0,4" />
                            <TextBox Text="{Binding ScpiResponse}"
                                     Style="{StaticResource InputTextBox}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     Height="90"
                                     IsReadOnly="True"
                                     Background="#151734"
                                     BorderBrush="#2F3158" />
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardBorder}" Margin="0,0,16,0">
                    <StackPanel>
                        <TextBlock Text="Channels" Style="{StaticResource LabelText}" Margin="0,0,0,8" />
                        <ItemsControl ItemsSource="{Binding ChannelOptions}" Margin="0,4,0,12">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding DisplayName}"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                              Style="{StaticResource ListCheckBox}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Separator Margin="0,4,0,12" />
                        <TextBlock Text="Measurements" Style="{StaticResource LabelText}" Margin="0,0,0,8" />
                        <ListBox ItemsSource="{Binding MeasurementOptions}" BorderThickness="0" Background="Transparent" Margin="0,4,0,0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding DisplayName}"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                              Style="{StaticResource ListCheckBox}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardBorder}" Padding="20">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Measurements Matrix" Style="{StaticResource LabelText}" VerticalAlignment="Center" />
                                <Border Padding="8,4"
                                        Background="#1F2145"
                                        BorderBrush="#2F3158"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        VerticalAlignment="Center"
                                        Margin="8,0,0,0">
                                    <TextBlock Text="{Binding LatestTimestamp, StringFormat='{}{0:HH:mm:ss}'}"
                                               Foreground="{DynamicResource ForegroundBrush}"
                                               FontWeight="SemiBold" />
                                </Border>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="Fetch"
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding FetchMeasurementsCommand}"
                                        IsEnabled="{Binding IsConnected}" />
                                <Button Content="Clear"
                                        Style="{StaticResource GhostButton}"
                                        Command="{Binding ClearMatrixCommand}"
                                        Margin="8,0,0,0" />
                            </StackPanel>
                            <Button Grid.Column="2"
                                    Content="Open Logs Folder"
                                    Style="{StaticResource GhostButton}"
                                    Command="{Binding OpenLogsCommand}" />
                        </Grid>

                        <Border Background="#151734" BorderBrush="#2F3158" BorderThickness="1" CornerRadius="8">
                            <StackPanel>
                                <ItemsControl ItemsSource="{Binding MatrixHeaders}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="{Binding DataContext.MatrixColumnCount, RelativeSource={RelativeSource AncestorType=Window}}" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10,6" BorderBrush="#2F3158" BorderThickness="0,0,1,1">
                                                <TextBlock Text="{Binding}" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}" />
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <ItemsControl ItemsSource="{Binding MatrixRows}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <ItemsControl ItemsSource="{Binding Cells}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <UniformGrid Columns="{Binding DataContext.MatrixColumnCount, RelativeSource={RelativeSource AncestorType=Window}}" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Padding="10,6" BorderBrush="#2F3158" BorderThickness="0,0,1,1">
                                                            <TextBlock Text="{Binding}" Foreground="{DynamicResource ForegroundBrush}" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <Border Grid.Row="2" Background="{DynamicResource PrimaryBrush}" Padding="12,6">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Powered by " Foreground="White" />
                <TextBlock>
                    <Hyperlink NavigateUri="https://www.primeasure.com" RequestNavigate="Hyperlink_RequestNavigate" Foreground="White">
                        www.primeasure.com
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
